<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isnico.api.mapper.UserScoreMapper">
    <resultMap id="BaseResultMap" type="com.isnico.api.model.po.UserScore">
        <!--@mbg.generated-->
        <!--@Table user_score-->
        <id column="id" property="id"/>
        <result column="created_time" property="createdTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="user_id" property="userId"/>
        <result column="type" property="type"/>
        <result column="score" property="score"/>
        <result column="desc" property="desc"/>
        <result column="remark" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, created_time, update_time, user_id, `type`, score, `desc`, remark
    </sql>

    <select id="findByUserIdAndTypeOrderByCreatedTimeDesc" resultType="com.isnico.api.model.vo.UserScoreListResp">
        select *
        from user_score
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="type != null">
                and `type` = #{type}
            </if>
        </where>
        order by created_time desc
    </select>
</mapper>
